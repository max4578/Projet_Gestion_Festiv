

@ViewBag.type;
@{  
    if(ViewBag.type == "gestionFestival.Models.CAdministrateur")
    {
        Layout = "/Views/Shared/headerAdmin.cshtml";
    }

    else if (ViewBag.type == "gestionFestival.Models.CComptable")
    {
        Layout = "~/Views/Shared/headerComptable.cshtml";
    }

    else if (ViewBag.type == "gestionFestival.Models.CResponsable")
    {
        Layout = "~/Views/Shared/headerResponsable.cshtml";
    }

    else if (ViewBag.type == "gestionFestival.Models.CParticipant")
    {
        Layout = "~/Views/Shared/headerParticipant.cshtml";
    }

    else if (ViewBag.type == "gestionFestival.Models.CPersonnel")
    {
        Layout = "~/Views/Shared/headerPersonnel.cshtml";
    }
}
