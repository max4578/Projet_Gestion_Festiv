@using gestionFestival.Models;
@{
    Layout = "~/Views/Shared/headerAdmin.cshtml";
}

<h2>Gestion des postes</h2>
<div>
    @using (Html.BeginForm("Index", "GestionPoste"))
    {
        @Html.Label("Nouveau poste")
        <span>  </span>
        @Html.TextBox("poste")
        <br /><br />
        @Html.Label("Description du poste")
        <span>  </span>
        @Html.TextArea("description")
        <br />
        <input type="submit" value="Ajouter" />
    }
</div>
<br />
<div>
    <h3>@ViewBag.message</h3>
</div>
<br /><br /><br /><br />
<div>
    <table>
        <tr><td>Poste</td><td>Assigné à</td><td></td><td></td></tr>
        @{int i = 0; }
        @foreach (CPoste liste in ViewBag.listeDesPostes)
        {
            <tr>
                <td>@liste.NomPoste </td>
                <td>nom du responsable</td>
                <td><button onclick="">@Html.ActionLink("Suppression Poste", "SuppressionPoste", "GestionPoste", new { id = i }, null)</button></td>
                <td><button onclick="">@Html.ActionLink("Modification", "Poste", "GestionPoste", new { id = i++ }, null)</button></td>
            </tr>
        }
    </table>

</div>
