@model gestionFestival.Models.CPoste
@using gestionFestival.Models
@using gestionFestival.ViewModel
@{
    Layout = "~/Views/Shared/headerAdmin.cshtml";
}

<h2></h2>
<div>
    @using (Html.BeginForm("Index", "GestionPoste"))
    {
        <fieldset>
            <legend>Gestion des postes</legend>

            <div>
                @Html.Label("Nouveau poste")
                @Html.TextBoxFor(model => model.NomPoste)
                @Html.ValidationMessageFor(model => model.NomPoste)
            </div>
            <div>
                @Html.LabelFor(model => model.Description)
                @Html.TextAreaFor(model => model.Description)
            </div>
            <br />
            <input type="submit" value="Ajouter" />
        </fieldset>
    }
</div>
<br />
<div>
    <h3>@ViewBag.message</h3>
</div>
<br />
<div>
    <table>
        <tr><td><h2>Poste a assigner</h2></td><td></td><td></td></tr>
        @{int i = 0; }
        @foreach (CPoste liste in ViewBag.listeDesPostesNonAssigne)
        {
            <tr>
                <td>@liste.NomPoste </td>
                <td></td>
                <td><button onclick="">@Html.ActionLink("Suppression Poste", "SuppressionPoste", "GestionPoste", new { id = i }, null)</button></td>
                <td><button onclick="">@Html.ActionLink("Assigner le poste", "Responsable", "GestionPoste", new { id = i }, null)</button></td>
                <td><button onclick="">@Html.ActionLink("Modification", "Poste", "GestionPoste", new { id = i++ }, null)</button></td>
            </tr>
        }
    </table>

</div>
<br /><br />
<div>
    <table>
        <tr><td><h2>Poste assigné</h2></td><td></td><td></td></tr>
        @{int j = 0; }
        @foreach (VM_PosteAssigne liste in ViewBag.listeDesPostes)
        {
            <tr>
                <td>@liste.poste.NomPoste </td>
                <td>@liste.responsable.Id</td>
                <td><button onclick="">@Html.ActionLink("Suppression Poste", "SuppressionPosteAssigne", "GestionPoste", new { id = j }, null)</button></td>
                <td><button onclick="">@Html.ActionLink("Modification", "Poste", "GestionPoste", new { id = j++ }, null)</button></td>
            </tr>
        }
    </table>

</div>
