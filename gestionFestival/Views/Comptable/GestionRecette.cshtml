@model gestionFestival.Models.CPoste
@using gestionFestival.Models
@{
    Layout = "~/Views/Shared/headerComptable.cshtml";
    ViewBag.Title = "GestionDepense";
}
<br />
<div>
    <table>
        <tr><td colspan="4"><h2>Gestion des recettes</h2></td></tr>
        @foreach (CPoste poste in ViewBag.listeDesPostes)
        {
            <tr>
                <td>@poste.NomPoste</td>
                <td>@poste.Recette.Total</td>
            </tr>
        }
    </table>

</div>